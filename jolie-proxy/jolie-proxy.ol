    // ğŸ”— Connexion MySQL avec gestion des tentatives
    define initializeMySQLConnection {
        scope( connection ) {
            install( ConnectionError =>
                connectionAttempt++;
                if ( connectionAttempt > 3 ) {
                    println@Console("âŒ Impossible de se connecter Ã  MySQL aprÃ¨s 3 tentatives.")()
                    global.mysqlAvailable = false
                    throw( ConnectionError )
                } else {
                    println@Console("â³ Tentative " + connectionAttempt + " de connexion Ã  MySQL...")()
                    sleep@Time( connectionAttempt * 1500 )();
                    initializeMySQLConnection

                }
            )
            with( connectionInfo ) {
                .username = "root";
                .port = 3306;
                .password = "password";
                .host = "mysql";
                .database = "gestion_bibliotheque"; 
                .driver = "mysql"
                .checkConnection = 1;
                .toLowerCase = true
            };
            connect@Database( connectionInfo )();
            println@Console("âœ… Connexion MySQL Ã©tablie.")()
            global.mysqlAvailable = true
            
        }
    }
